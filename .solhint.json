{
  "extends": "solhint:recommended",
  "rules": {
    "compiler-version": [
      "error",
      "^0.8.0"
    ],
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "no-empty-blocks": [
      "off"
    ],
    "reason-string": [
      "off"
    ],
    "not-rely-on-time": [
      "off"
    ]
  }
}